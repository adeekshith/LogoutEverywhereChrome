{
  "name": "Logout Everywhere",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Logout of all the supported websites you are currently logged in with just a single click.",
  "homepage_url": "http://deekshith.in",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Logout Everywhere",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "cookies"
  ]
}